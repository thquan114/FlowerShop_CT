
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    var list = ViewBag.list;
}

<link href="~/Content/assets/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title">Categories </h4>
            <ol class="breadcrumb p-0 m-0">
                <li>
                    <a href="@Url.Action("Index", "HomeAdmin")">FlowersShop</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Categories")">Categories</a>
                </li>
                <li class="active">
                    List Category
                </li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="clearfix">
                    <div class="pull-left">
                        <h3><img src="~/Content/assets/images/logo_sm.png" alt="" height="24"> List Category </h3>
                    </div>
                </div>
                <hr>

                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="myData" class="table m-t-30">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Option</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Option</th>
                                    </tr>
                                </tfoot>
                                @foreach (var item in list)
                                {
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<script src="~/Content/assets/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $('#myData').DataTable();
</script>